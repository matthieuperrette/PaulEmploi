<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Application Recrutement</title>
    <meta name="description" content="">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link href="/stylesheets/main.css" rel="stylesheet">
</head>
<body class="vh-100 row">
    <%- include('partials/header.ejs', {boutonAccueil: true}) %>
  <div class="row m-0 vh-100">
      <%- include('partials/navbar.ejs',{nav: 0}) %>
    <div class="col-11">
        <%var i=-1%>
        <% candidatures.forEach((candidature)=> { %>
            <% i= i + 1 %>
        <div class="container-block border border-secondary m-3">
            
            <div class="container-block m-3 align-items-center row">
                <div class="col-3">
                    <span><%= candidature.nom%> <%= candidature.prenom%></span> 
                </div>
                <div class="col-7">
                    <span>Date de candidature : <%= moment(candidature.date_candidature).format('DD/MM/YYYY');%></span>
                </div>
                <div class="col-2">
                    <button class="btn btn-primary float-end rounded-0" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample<%=i%>" aria-expanded="false" aria-controls="collapseExample">Plus</button>
                </div>
            </div>

            <div class="collapse border-top border-secondary" id="collapseExample<%=i%>">
                <div class="row">
                    <div class="col-10">
                        <p class="m-3">
                            email : <%= candidature.email%> <br>
                            numéro de téléphone : <%= candidature.numtel%><br>
                            Pièces nécessaires : <%=candidature.indication%><br>
                            Pièces fournies : <%if (!candidature.CV && !candidature.LM) {%> aucune <%};%>
                            <%if (candidature.CV) {%> <a href="/getfile?fichier=<%=candidature.CV%>">CV</a> <%};%>
                            <%if (candidature.LM) {%> <a href="/getfile?fichier=<%=candidature.LM%>"> LM</a> <%};%>
                        </p>
                    </div>
                </div>
                
            </div>

        </div>
        <% })%>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</body>
</html>