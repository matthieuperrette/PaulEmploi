<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Application Recrutement</title>
    <meta name="description" content="">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link href="/stylesheets/main.css" rel="stylesheet">
</head>
<body class="vh-100 row">
  <%- include('partials/header.ejs', {boutonAccueil: false}) %>
  <div class="row m-0 vh-100">
    <%- include('partials/navbar.ejs',{nav: 2}) %>
    <div class="col-11">
        <% candidatures.forEach((candidature)=> { %>
        <div class="container-block border border-secondary m-3">
            
            <div class="container-block m-3 align-items-center row">
                <div class="col-3">
                    <span><%= candidature.intitule%> chez <%=candidature.nom%></span> 
                </div>
                <div class="col-3">
                    <span>Date de candidature : <%= moment(candidature.date_candidature).format('DD/MM/YYYY');%></span>
                </div>
                <div class="col-5">
                    <form id="form_inscription" class="" method="post" action="/candidat/PageOffre">
                        <input type="hidden" name="id_offre" id="hiddenField" value=<%= candidature.id_offre%>>
                        <input type="hidden" name="sansCandidature" id="hiddenField" value=1>
                        <button class="btn btn-primary float-end rounded-0" type="submit">Revoir l'offre</button>
                      </form>
                </div>
                <div class="col-1">
                    <button class="btn btn-primary float-end rounded-0" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">Plus</button>
                </div>
            </div>

            <div class="collapse border-top border-secondary" id="collapseExample">
                <div class="row">
                    <div class="col-10">
                        <p class="m-3">
                            Pièces nécessaires : <%=candidature.indication%><br>
                            Pièces fournies : <%=candidature.pieces%>
                        </p>
                    </div>
                    <div class="col-2">
                        <button class="btn btn-primary rounded-0 float-end m-2" href="#">Modifier</button>
                        <form id="form_inscription" class="" method="post" action="/candidat/SupprimerCandidature">
                            <input type="hidden" name="id_offre" id="hiddenField" value=<%=candidature.id_offre%>/>
                            <button class="btn btn-primary rounded-0 float-end m-2" type="submit">Supprimer</button>
                        </form>
                    </div>
                </div>
                
            </div>

        </div>
        <% })%>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</body>
</html>