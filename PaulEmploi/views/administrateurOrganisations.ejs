<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Application Recrutement</title>
    <meta name="description" content="">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link href="/stylesheets/main.css" rel="stylesheet">
</head>
<body class="vh-100 row">
    <%- include('partials/header.ejs', {boutonAccueil: true}) %>
    <div class="row m-0 vh-100">
      <%- include('partials/navbar.ejs',{nav: 2}) %>
    <div class="col-11">

        <form class="container-block m-3 align-items-center border border-secondary row p-3" method="get" action="organisations">
            <input type="search" class="form-control" name="search" id="recherche" placeholder="Recherche">
        </form>
        <%var organisation, taille=organisations.length;%>
        <%var limit=2;%>
        <% for (var i=(page-1)*limit; i < page*limit && i < taille; i++){ %>
            <%organisation=organisations[i]%>
        <div class="container-block border border-secondary m-3">
            
            <div class="container-block m-3 align-items-center row">
                <div class="col-10">
                    <span>
                        nom : <%= organisation.nom %> <br>
                        siren : <%= organisation.siren %> <br>
                        localisation : <%= organisation.localisation_siege %> <br>
                        statut juridique : <%= organisation.statut_juridique%>
                    </span>
                </div>
                <div class="col-1">
                    <% if (organisation.statut_demande == 'validee') { %>
                        <span class="float-end">Acceptée</span>
                    <% } else if (organisation.statut_demande == 'refusee'){ %>
                        <span class="float-end">Refusée</span>
                    <% } else {%>
                        <form method="post" action="/administrateur/accepterOrganisation">
                            <input class="d-none" name="organisation_siren"  readonly value="<%= organisation.siren %>">
                            <button type="submit" class="btn btn-primary active rounded-1 ">Accepter</button>
                        </form>
                    </div>
                    <div class="col-1">
                        <form method="post" action="/administrateur/refuserOrganisation">
                            <input class="d-none" name="organisation_siren"  readonly value="<%= organisation.siren %>">
                            <button type="submit" class="btn btn-primary active rounded-1 ">Refuser</button>
                        </form>
                    <%};%>
                </div>
            </div>
        </div>
        <%};%>
        <div class="btn-toolbar position-absolute start-50 translate-middle-x" role="toolbar" aria-label="Toolbar with button groups">
            <div class="btn-group me-2" role="group" aria-label="First group">
                <% if(page != 1 && taille!=0) {%>
                    <a href="/administrateur/organisations?page=<%=Number(page)-1%>&search=<%=search%>" class="btn btn-primary"><</a>
                <%};%>
            </div>
            <div class="btn-group me-2" role="group" aria-label="Second group">
                <% for (i=page-2; (i <= Math.ceil(taille/limit) && i <= page+2);i++ ) {%>
                    <% if(i>0) {%>
                        <% if(i==page) {%>
                            <a href="/administrateur/organisations?page=<%=i%>&search=<%=search%>" class="btn btn-secondary"><%=i%></a>   
                        <%} else {%>
                            <a href="/administrateur/organisations?page=<%=i%>&search=<%=search%>" class="btn btn-primary"><%=i%></a>   
                        <%};%>
                    <%};%>
                <%};%>
            </div>
                <% if(page != Math.ceil(taille/limit) && taille != 0) {%>
                    <div class="btn-group" role="group" aria-label="Third group">
                        <a href="/administrateur/organisations?page=<%=Number(page)+1%>&search=<%=search%>" class="btn btn-primary">></a>
                    </div>
                <%};%>
        </div>   
    </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</body>
</html>

